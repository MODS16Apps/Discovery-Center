<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.fau.jeff.discoverycentergithub.PhotoAdventure"
    android:background="#ffcd05">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/photoadventure"
        android:layout_marginBottom="453dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/openCamera"
        android:layout_marginBottom="151dp"
        android:background="@drawable/launchcamera"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/openGallery"
        android:layout_marginEnd="67dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/openGallery"
        android:background="@drawable/opengallery"
        android:layout_alignTop="@+id/openCamera"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="64dp" />
</RelativeLayout>