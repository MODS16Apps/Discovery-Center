<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.fau.jeff.discoverycentergithub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/hard_hat_helmet"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectionScreen"
            android:label="@string/app_name" />
        <activity
            android:name=".Trivia"
            android:label="@string/app_name" />
        <activity
            android:name=".NewRiverInn"
            android:label="@string/app_name" />
        <activity
            android:name=".PhotoAdventure"
            android:label="@string/app_name" />
        <activity
            android:name=".Settings"
            android:label="@string/app_name" />
        <activity
            android:name=".Drawing"
            android:label="Discovery Center"/>
    </application>

</manifest>