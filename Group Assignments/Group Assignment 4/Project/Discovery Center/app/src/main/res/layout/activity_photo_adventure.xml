<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.fau.jeff.discoverycentergithub.PhotoAdventure"
    android:background="#ffcd05">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/photoadventurebox"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/openCamera"
        android:background="@drawable/answerbox"
        android:text="Launch Camera"
        android:textColor="#3508ff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Augmented Reality"
        android:id="@+id/button6"
        android:background="@drawable/answerbox"
        android:textColor="#3508ff"
        android:layout_below="@+id/openCamera"
        android:layout_alignStart="@+id/openCamera"
        android:layout_marginTop="136dp" />

</RelativeLayout>