<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.fau.jeff.discoverycentergithub.MainActivity"
    android:background="#ffcc00">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modsLogo"
        android:src="@drawable/modslogo"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="N A M E"
        android:ems="10"
        android:id="@+id/enterName_editText"
        android:layout_alignBottom="@+id/modsLogo"
        android:layout_alignEnd="@+id/modsLogo"
        android:enabled="true"
        android:clickable="true"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dayOfBirth_editText"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/modsLogo"
        android:layout_alignEnd="@+id/modsLogo"
        android:layout_alignStart="@+id/enterName_editText"
        android:text="A G E"
        android:clickable="true"
        android:enabled="true"
        android:editable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/abc_ic_go_search_api_material"
        android:maxHeight="35dp"
        android:maxWidth="35dp"
        android:minHeight="35dp"
        android:minWidth="35dp"
        android:clickable="true"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/female_radioButton"
        android:layout_toStartOf="@+id/female_radioButton" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/male_radioButton"
        android:checked="false"
        android:layout_below="@+id/dayOfBirth_editText"
        android:layout_alignStart="@+id/dayOfBirth_editText"
        android:layout_marginTop="55dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/female_radioButton"
        android:checked="false"
        android:layout_alignTop="@+id/male_radioButton"
        android:layout_alignEnd="@+id/modsLogo" />

</RelativeLayout>
